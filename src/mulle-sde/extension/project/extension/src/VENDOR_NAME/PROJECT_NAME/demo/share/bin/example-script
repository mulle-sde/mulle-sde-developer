[ "${TRACE}" = "YES" ] && set -x && : "$0" "$@"


do_something()
{
   #
   # This is a demo template for a mulle-bashfunctions function
   # You can of course script it any other way. These scrips are
   # not installed locally into the project, but globally along
   # with the extension!
   #
   :
}


usage()
{
   [ "$#" -ne 1 ] && log_error "$1"

   cat <<EOF >&2
usage:
   `fast_basename $0`

   Do something!
EOF
   exit 1
}


main()
{
   while [ $# -ne 0 ]
   do
      if options_technical_flags "$1"
      then
         shift
         continue
      fi

      case "$1" in
         -h*|--help|help)
            usage
         ;;

         -*)
            usage "unknown option \"$1\""
         ;;

         *)
            break
         ;;
      esac

      shift
   done

   options_setup_trace "${MULLE_TRACE}"

   do_something "$@"
}


_init()
{
   if [ -z "${MULLE_BASHFUNCTIONS_LIBEXEC_DIR}" ]
   then
      MULLE_BASHFUNCTIONS_LIBEXEC_DIR="`mulle-bashfunctions-env "libexec-dir" 2> /dev/null`"
      [ -z "${MULLE_BASHFUNCTIONS_LIBEXEC_DIR}" ] && \
         echo "mulle-bashfunctions-env not installed" >&2 && \
         exit 1
   fi

   . "${MULLE_BASHFUNCTIONS_LIBEXEC_DIR}/mulle-bashfunctions.sh" "minimal" || exit 1
}

_init "$@"
main "$@"
